<form action="/users" method="post">
  <input type="text" name="user[username]" placeholder="Choose a Username">
  <input type="password" name="password" placeholder="Password">
  <input type="text" name="user[first_name]" placeholder="What's your first name?">
  <input type="text" name="user[last_name]" placeholder="What's your last name?">
  <input type="text" name="user[age]" placeholder="How old are you?">
  <input type="submit" value="Let's get started!">
</form>